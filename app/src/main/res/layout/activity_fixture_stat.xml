<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="jamiesmyth.theoraclemain.FixtureStatActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/head_to_head"
                layout="@layout/content_head_to_head"/>

            <include
                android:id="@+id/home_form"
                layout="@layout/content_home_form"/>

            <include
                android:id="@+id/away_form"
                layout="@layout/content_away_form"/>

        </LinearLayout>
    </ScrollView>
</layout>
