<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/Head_To_Head_Layout"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="vertical"
        android:background="#51516F"
        android:clickable="true"
        tools:context="jamiesmyth.theoraclemain.FixtureStatActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="6dp">


            <android.support.v7.widget.CardView
                android:id="@+id/Head_To_Head"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:layout_margin="6dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Head_To_Head_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/head_to_head"
                        android:layout_weight=".75"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>

                    <TextView
                        android:id="@+id/Number_Of_Games_H2H"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_applicable"
                        android:layout_weight=".25"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight=".4">

                <android.support.v7.widget.CardView
                    android:id="@+id/Btts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Btts_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/btts"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".55">

                            <ProgressBar
                                android:id="@+id/Btts_Percentage_Bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                android:layout_centerInParent="true"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                />

                            <TextView
                                android:id="@+id/Btts_Percentage_Text"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/not_applicable"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Over_Two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Over_Two_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/over_2.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".55">

                            <ProgressBar
                                android:id="@+id/Over_Two_Percentage_Bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                android:layout_centerInParent="true"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                />

                            <TextView
                                android:id="@+id/Over_Two_Percentage_Text"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/not_applicable"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Over_One"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Over_One_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/over_1.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".55">

                            <ProgressBar
                                android:id="@+id/Over_One_Percentage_Bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                android:layout_centerInParent="true"
                                android:progressDrawable="@drawable/circular"
                                android:secondaryProgress="100"
                                />

                            <TextView
                                android:id="@+id/Over_One_Percentage_Text"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="@string/not_applicable"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight=".4">

                <android.support.v7.widget.CardView
                    android:id="@+id/First_Half"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/First_Half_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/first_half"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/First_Half_Percentage_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/NeededOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Needed_One_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/Needed_One_Percentage_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Needed_Two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:layout_margin="6dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Needed_Two_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <TextView
                            android:id="@+id/Needed_Two_Percentage_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>
